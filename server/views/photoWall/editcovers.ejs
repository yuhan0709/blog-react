<%- include('../header')%>
<div class="container">
        <div class="bg-info" style="padding:10px; margin:10px 0 30px 0;">新增相册</div>
    <div class="row">
        <div class="col-md-8 col-md-offest-2">
            <form action="/covers/editCover/<%=data._id%>" method="post">
                <div class='form-group'>
                    <label>相册题目：</label>
                    <input class="form-control" name="title" value="<%= data.title %>"/>
                </div>
                <div class="form-group">
                    <label>相册描述：</label>
                    <input class="form-control" value="<%= data.description %>" name="description" />
                </div>
                <div class="form-group">
                    <label>相册封面：</label>
                    <input class="form-control" name="url" value="<%= data.url%>" palceholder="请输入图片链接地址"/>
                    <img src="<%=data.url%>" style="width:150px;magrin-top:20px;" alt="暂无图片"/>
                </div>
                <div class="form-group">
                    <label>
                        <% if(data.private){ %>
                            <input type="checkbox" name="private" checked>私密           
                        <% }else{ %>
                            <input type="checkbox" name="private">私密    
                        <% }%>
                    </label>
                </div>
                <button class="btn btn-primary">确定</button>
            </form>
        </div>
    </div>
</div>
<script src="/js/utils.js"></script>
<script src="/js/editcover.js"></script>
<%- include('../footer')%>